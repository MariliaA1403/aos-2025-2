generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pessoa {
  id           Int           @id @default(autoincrement())
  nome         String
  email        String
  telefone     String
  resumo       String
  formacoes    Formacao[]
  experiencias Experiencia[]
  habilidades  Habilidade[]
}

model Formacao {
  id          Int      @id @default(autoincrement())
  curso       String
  instituicao String
  anoInicio   Int
  anoFim      Int
  pessoaId    Int
  pessoa      Pessoa   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)
}

model Experiencia {
  id          Int      @id @default(autoincrement())
  cargo       String
  empresa     String
  anoInicio   Int
  anoFim      Int
  pessoaId    Int
  pessoa      Pessoa   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)
}

model Habilidade {
  id        Int      @id @default(autoincrement())
  nome      String
  nivel     String
  pessoaId  Int
  pessoa    Pessoa   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)
}
